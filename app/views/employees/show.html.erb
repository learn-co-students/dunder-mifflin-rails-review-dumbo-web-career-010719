<body>
<div class="container">
   <p>
     <%= image_tag(@employee.img_url) unless @employee.img_url.blank? %>
   </p>
  <table cellspacing="20px" width="400px">
    <tr>
      <td><h3>Name:</h3></td><td><h3><%= @employee.first_name + " " + @employee.last_name %></h3></td>
    </tr>

    <tr>
      <td><h3>Alias:</h3></td><td><h3><%= @employee.alias %></h3></td>
    </tr>

    <tr>
      <td><h3>Title:</h3></td><td><h3><%= @employee.title %></h3></td>
    </tr>

    <tr>
      <td><h3>Office:</h3></td><td><h3><%= @employee.office %></h3></td>
    </tr>
  </table>
</div>
</body>
